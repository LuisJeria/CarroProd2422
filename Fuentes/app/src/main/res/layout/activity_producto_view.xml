<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductoViewActivity">
    <include layout="@layout/toolbar">

    </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/pading_prod">
        <TextView
            android:id="@+id/nombre_prod_view_txt"
            android:textSize="@dimen/tamanio_titulo_app"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <ImageView
            android:layout_marginTop="@dimen/margin_top_prod"
            android:id="@+id/image_prod_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            android:layout_marginTop="@dimen/margin_top_prod"
            android:id="@+id/des_prod_view"
            android:textSize="@dimen/tamanio_des_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Precio"
                android:layout_weight="1"
                android:textSize="@dimen/tamanio_titulo_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/precio_prod_view"
                android:layout_weight="1"
                android:textSize="@dimen/tamanio_titulo_app"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>